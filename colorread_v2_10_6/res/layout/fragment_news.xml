<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/layout_news_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ff4040" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:text="新闻"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_add_chnnel"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/add_chnnel" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/news_viewPager"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/layout_news_title"
        android:background="#efefef" />

    <GridView
        android:id="@+id/news_gridView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"
        android:layout_below="@id/news_viewPager"
        android:background="#ebecde"
        android:numColumns="3">
    </GridView>

</RelativeLayout>